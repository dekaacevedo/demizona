<div class="container">
  <h2 class = "my-3 text-center mb-5 mt-5">¿Olvidaste tu contraseña?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="d-flex justify-content-center">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "inputs input-email mr-4 mb-2" } %>
    </div>

    <div class="form-actions d-flex justify-content-center my-3 mb-5 mt-5">
      <%= f.button :submit, "Recuperar mi contraseña", class: "btn boton-primario mb-2" %>
    </div>
  <% end %>

  <div class="dropdown-divider"></div>

  <div class="d-flex justify-content-center mb-5">
    <div class="before-form my-4 mx-3 d-flex flex-column align-items-center">
      <p class="text-small">Ya tienes cuenta en Demizona?</p>
      <%- if controller_name != 'sessions' %>
        <%= link_to "Inicia Sesion", new_session_path(resource_name), class: "text-medium bold" %>
      <% end %>
    </div>

    <div class="before-form my-4 mx-3 d-flex flex-column align-items-center">
      <p class="text-small">No tienes una cuenta?</p>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Regístrate", new_registration_path(resource_name), class: "bold text-medium mb-2" %>
        <% end %>
    </div>
  </div>
</div>
