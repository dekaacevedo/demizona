<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-md-6 mt-5">
      <h2 class="text-center mb-5">Inicia Sesión para continuar</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="new-store-form d-flex flex-column align-items-start mb-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "inputs-store" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "inputs-store" } %>
          <%= f.input :remember_me, label: "Recuérdame", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="d-flex flex-column align-items-center mb-3">
                  <%= f.button :submit, "Iniciar Sesión", class: "btn boton-primario mb-2" %>
                  <%= link_to "¿Olvidaste tu contraseña?", new_user_password_path  %>
        </div>
      <% end %>

      <div class="dropdown-divider"></div>
      <div class="before-form my-4 d-flex flex-column align-items-center">
        <p class="text-small">No tienes una cuenta?</p>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Regístrate", new_registration_path(resource_name), class: "bold text-small mb-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
