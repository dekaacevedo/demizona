<div class="modal fade bd-example-modal-lg"tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="login-modal flex-row">
      <div class="modal-img">
        <%= image_tag "login.jpg", class:"login-img" %>
      </div>
      <div class="login-formulario ">
        <div class="login-close">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="">
          <h5 class="modal-title mb-2" id="exampleModalLabel">Inicia Sesión</h5>
        </div>
        <div class="border-bottom mb-3"></div>
        <div class="d-flex flex-column">
          <p class="login-title">Ingresa a tu cuenta</p>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
            <div class="login-margin-bottom">
              <%= f.input :email,
                  required: false,
                  autofocus: true,
                  placeholder: "correo@ejemplo.com",
                  input_html: { autocomplete: "email", class: "login-inputs" } %>
              <%= f.input :password,
                  required: false,
                  label: "Contraseña",
                  placeholder: "••••••••••",
                  input_html: { autocomplete: "current-password", class: "login-inputs" } %>
              <%= f.input :remember_me,
                  label: "Recuérdame",
                  as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="d-flex flex-column align-items-center mb-3">
              <%= f.button :submit, "Iniciar Sesión", class: "btn boton-primario boton-login" %>
              <%= link_to "¿Olvidaste tu contraseña?", new_user_password_path  %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


