<div class="modal fade bd-example-modal-lg" id="myModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="login-modal flex-row">
      <div class="modal-img">
        <%= image_tag "login.jpg", class:"login-img" %>
      </div>
      <div class="login-formulario">
        <div class="login-close">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
          <ul class="nav mb-2 align-self" data-tabs="tabs">
            <li id="tab1" class="">
              <a class="modal-title mr-4 active" href="#Login" data-toggle="tab">Inicia Sesión</a>
            </li>
            <li id="tab2">
              <a class="modal-title" href="#Signup" data-toggle="tab">Regístrate</a>
            </li>
          </ul>
          <div class="border-bottom mb-3"></div>
          <div class="tab-content">
            <div class="tab-pane active" id="Login">
              <p class="login-title">Ingresa a tu cuenta</p>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
                <div class="login-margin-bottom">
                  <%= f.input :email,
                      required: false,
                      autofocus: true,
                      placeholder: "correo@ejemplo.com",
                      input_html: { autocomplete: "email", class: "inputs login-inputs" } %>
                  <%= f.input :password,
                      required: false,
                      label: "Contraseña",
                      placeholder: "••••••••••",
                      input_html: { autocomplete: "current-password", class: "inputs login-inputs" } %>
                  <%= f.input :remember_me,
                      label: "Recuérdame",
                      as: :boolean if devise_mapping.rememberable? %>
                </div>
                <div class="d-flex flex-column align-items-center mb-3">
                  <%= f.button :submit, "Iniciar Sesión", class: "btn boton-primario boton-login" %>
                  <%= link_to "¿Olvidaste tu contraseña?", new_user_password_path  %>
                </div>
              <% end %>
            </div>
            <div class="tab-pane" id="Signup">
              <p class="login-title">Crea tu cuenta</p>
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= f.error_notification %>

                <div class="signup-margin-bottom">
                  <div class="d-flex">
                    <%= f.input :name,
                                required: true,
                                label: "Nombre",
                                placeholder: "Pedro",
                                input_html: { autocomplete: "name", class: "inputs signup-inputs mr-1" } %>
                    <%= f.input :last_name,
                                required: true,
                                label: "Apellidos",
                                placeholder: "Muñoz Saavedra",
                                input_html: { autocomplete: "last-name", class: "inputs signup-inputs" } %>
                  </div>
                  <%= f.input :email,
                              required: true,
                              autofocus: true,
                              placeholder: "correo@ejemplo.com",
                              input_html: { autocomplete: "email", class: "inputs email-inputs" }%>
                  <div class="d-flex">
                    <%= f.input :password,
                                required: true,
                                label: "Contraseña",
                                placeholder: "••••••••••",
                                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                                input_html: { autocomplete: "new-password", class: "inputs signup-inputs mr-1" } %>
                    <%= f.input :password_confirmation,
                                required: true,
                                label: "Confirmar contraseña",
                                placeholder: "••••••••••",
                                input_html: { autocomplete: "new-password", class: "inputs signup-inputs" } %>
                  </div>

                  <div class="d-flex">
                  <%= f.input :address,
                              required: true,
                              label: "Dirección",
                              placeholder: "Av. Salgado 1234, Purén",
                              input_html: { autocomplete: "address", class: "inputs signup-inputs mr-1" } %>
                  <%= f.input :phone,
                              required: true,
                              label: "Teléfono",
                              placeholder: "+56912345678",
                              input_html: { autocomplete: "phone", class: "inputs signup-inputs" } %>
                  </div>
                </div>
                <div class="d-flex flex-column align-items-center mb-3">
                  <%= f.button :submit, "Regístrate", class: "btn boton-primario boton-login" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>


    </div>
  </div>
</div>
