<div class="container-fluid ">
  <div class="row m-5">

    <div class="col-md-8">
      <h1 class ="title-cart text-center">Tiendas</h1>
      <div class="index-stores">
        <% @stores.each do |store| %>
          <%= link_to(store_path(store)) do %>
          <% if store.photos.attached? %>
            <% store.photos.each do |photo| %>
            <div class="store"style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path photo.key,crop: :fill %>)">
              <h3> <%= store.name %> </h3>
              <p><%= store.address %></p>
            </div>
            <% end %>
          <% else %>
          <div class="default-image">
            <h3> <%= store.name %> </h3>
            <p><%= store.address %></p>
          </div>
          <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-md-4 mt-5">
      <div id="map"
      style="width: 100%; height: 75vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
    <div class="pagination m-2 p-2">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>

