<% @cart_items.each do |item| %>
  <h3><%= item.product.name %></h3>
  <h3><%= item.product.old_price %></h3>
  <%= simple_form_for item, url: cart_item_path(item.id), remote: true do |f| %>
    <%= f.hidden_field :product_id, value: item.product.id %>
    <%= f.number_field :quantity, value: item.quantity.to_i %>
    <%= f.submit "Update Cart" %>
    <%= link_to  "Remove Items", item, method: :delete, remote: true %>
  <% end %>
  <h2>Subtotal: <%= item.total %></h2>
<% end %>

<h3>Your current order has a total of: <%= current_cart.total_price %></h3>
<% if @cart_items.size > 0 %>
  <%= link_to  "Pagar", orders_path, method: :post %>
<% end -%>
