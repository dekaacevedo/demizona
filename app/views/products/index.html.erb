<div class="container my-5">
  <h1>Productos</h1>
  <% @products.each do |product| %>
    <%= product.name %>
    <%= product.description %>
    <%= product.old_price %>
    <%= simple_form_for(@cart_item, remote: true) do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.input :quantity, value: 1, min: 1 %>
      <%= f.submit "Add To Cart" %>
    <% end %>
  <% end %>
</div>
